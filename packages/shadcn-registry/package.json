{
	"name": "@koroflow/shadcn-registry",
	"version": "0.0.1-beta.9",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"exports": {
		"./*": {
			"import": {
				"types": "./dist/types/*.d.ts",
				"default": "./dist/esm/*.js"
			},
			"require": {
				"types": "./dist/types/*.d.ts",
				"default": "./dist/cjs/*.js"
			}
		},
		"./src/themes/*": {
			"import": {
				"types": "./src/themes/*",
				"default": "./src/themes/*"
			}
		},
		"./__registry__": {
			"import": {
				"types": "./src/__registry__/index.d.ts",
				"default": "./dist/esm/__registry__/index.js"
			},
			"require": {
				"types": "./dist/types/*/index.d.ts",
				"default": "./dist/cjs/__registry__/index.js"
			}
		}
	},
	"files": ["dist", "src"],
	"scripts": {
		"build": "pnpm build:registry && tsup",
		"build:declarations": "tsc -p tsconfig.declarations.json && resolve-tspaths --out ./dist ",
		"build:registry": "tsx --tsconfig ./tsconfig.scripts.json ./scripts/build-registry.mts && pnpm fmt",
		"check-types": "tsc --noEmit",
		"dev": "tsup --watch",
		"fmt": "pnpm biome format --write .",
		"lint": "pnpm biome lint ./src"
	},
	"browserslist": [">0.2%", "not dead", "not op_mini all"],
	"dependencies": {
		"@koroflow/core-js": "workspace:*",
		"@koroflow/dev-tools": "workspace:*",
		"@koroflow/elements": "workspace:*",
		"@radix-ui/react-accordion": "1.2.2",
		"@radix-ui/react-dialog": "1.1.4",
		"@radix-ui/react-label": "2.1.1",
		"@radix-ui/react-select": "^2.1.5",
		"@radix-ui/react-slot": "1.1.1",
		"@radix-ui/react-switch": "1.1.2",
		"class-variance-authority": "^0.7.1",
		"clsx": "2.1.1",
		"lucide-react": "^0.474.0",
		"motion": "^12.0.6",
		"react-hook-form": "7.54.2",
		"tailwind-merge": "2.6.0",
		"tailwind-variants": "^0.3.1",
		"zustand": "^5.0.3"
	},
	"devDependencies": {
		"@koroflow/tsup-config": "workspace:*",
		"@koroflow/typescript-config": "workspace:*",
		"lodash.template": "^4.5.0",
		"postcss": "^8.5.1",
		"resolve-tspaths": "^0.8.23",
		"rimraf": "^6.0.1",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"ts-morph": "^25.0.0",
		"tsup": "^8.3.6",
		"tsx": "^4.19.2",
		"zod": "^3.24.1"
	},
	"peerDependencies": {
		"react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
		"react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
	}
}
